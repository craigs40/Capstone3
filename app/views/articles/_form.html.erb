<%= bootstrap_form_for @article do |f| %>

  <%= f.text_area :title, maxlength: 60, placeholder: 'Enter article title' %><br><br>

  <%= f.text_area :subtitle, maxlength: 150, placeholder: 'Enter subtitle' %><br><br>

  <%= f.file_field :image %><br><br>

  <%= f.text_area :content, class: "content", placeholder: "Enter article details" %><br><br>

  <%= f.select :category_id, Category.all.map {|c| [c.category, c.id]} %><br><br>

  <%= f.hidden_field :user_id, value: @article.user_id %>

  <%= f.submit %><br><br>
<% end %>
